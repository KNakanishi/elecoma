<!--商品情報-->
<h3>商品情報</h3>
<table class="data" cellspacing="1">
  <tr>
    <th>商品ID</th>
    <td>
      <%= h(@pou.ps.product.id) %>
    </td>
  </tr>
  <tr>
    <th>商品名</th>
    <td>
      <%= h(@pou.ps.product.name) %>
    </td>
  </tr>
  <%if @system_supplier_use_flag%>
  <tr>
    <th>仕入先名</th>
    <td><%= h(@pou.ps.product.supplier_name) %></td>
  </tr>  
 <% end %>
  <tr>
    <th>カテゴリー名</th>
    <td>
      <%= h(@pou.ps.product.category_name) %>
    </td>
  </tr>
  <tr>
    <th>商品コード</th>
    <td>
      <%= h(@pou.ps.code) %>
    </td>
  </tr>
  <tr>
    <th>規格名称</th>
    <td>
      <%= h(@pou.ps.style_name) %>
    </td>
  </tr>
  <tr>
    <th>商品型番</th>
    <td>
      <%= h(@pou.ps.manufacturer_id) %>
    </td>
  </tr>  
  <tr>
    <th>価格</th>
    <td>
      <%= number_with_delimiter(@pou.ps.sell_price) %>
    </td>
  </tr>
  <tr>
    <th>現在実在庫数</th>
    <td>
      <%= number_with_delimiter(@pou.ps.actual_count.to_i) %>
    </td>
  </tr>
  <tr>
    <th>現在受注可能数</th>
    <td>
      <%= number_with_delimiter(@pou.ps.orderable_count.to_i) %>
    </td>
  </tr>
  <tr>
    <th>現在不良在庫数</th>
    <td>
      <%= number_with_delimiter(@pou.ps.broken_count.to_i) %>
    </td>
  </tr>
</table>
