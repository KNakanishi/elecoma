<%=h flash[:notice] %>
<%=h flash[:errors] %>
<%= f.error_messages %>
<p class="req"><span class="pnt">※</span>は必須入力です</p>
<table class="data" cellspacing="1" cellpadding="0">
  <tr>
    <th>テンプレート名 <span class="pnt">※</span></th>
    <td><%= confirm_tag :text_field, :service_cooperations_template , :template_name, :size =>100, :class =>"data_l" %></td>
  </tr><tr>
    <th>説明</th>
    <td><%= confirm_tag :text_area, :service_cooperations_template , :description , :rows => 10, :class => "data_l" %></td>
  </tr><tr>
    <th>サービス名称</th>
    <td><%= confirm_tag :text_field, :service_cooperations_template, :service_name, :size => 100, :class => "data_1" %> </td>
  </tr><tr>
    <th>出力ファイル名</th>
    <td><%= confirm_tag :text_field, :service_cooperations_template, :url_file_name, :size =>100, :class =>"data_l" %><br />
      <font color="red">拡張子を除いたファイル名</font>
    </td>
  </tr><tr>
    <th>ファイル形式</th>
    <td><%= confirm_tag :select, :service_cooperations_template, :file_type, ServiceCooperation.select_file_type %>
    </td>
  </tr><tr>
    <th>エンコード形式</th>
    <td><%= confirm_tag :select, :service_cooperations_template, :encode, ServiceCooperation.select_encode %>
    </td>
  </tr><tr>
    <th>改行文字</th>
    <td><%= confirm_tag :select, :service_cooperations_template, :newline_character , ServiceCooperation.select_newline_character %>
    </td>
  </tr><tr>
    <th>アイテムフィールド</th>
    <td><%= confirm_tag :text_field, :service_cooperations_template, :field_items, :size =>100, :class =>"data_l" %></td>
  </tr>
  <tr>
    <th>SQL </th>
    <td><%= confirm_tag :text_area, :service_cooperations_template, :sql , :rows => 20, :class => "data_l" %></td>
  </tr>
  
</table>
